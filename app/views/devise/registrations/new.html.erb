<div class="panel panel-default">
  <div class="panel-heading">
    <h2>Sign up</h2>
  </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form_group">
            <%= f.email_field :email, :placeholder => 'Email Address', autofocus: true, class: "form-control" %>
          </div><br />

          <div class="form_group">
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, :placeholder => 'Password (6 characters minimum)', autocomplete: "off", class: "form-control" %>
          </div><br />

          <div class="form_group">
            <%= f.password_field :password_confirmation, :placeholder => 'Re-Type Password', autocomplete: "off", class: "form-control" %>
          </div><br />

          <div class="form_group">
            <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
          </div>
       <% end %>
     </div>
    <div class="panel-footer">
      <%= render "devise/shared/links" %>
    </div>
</div>
