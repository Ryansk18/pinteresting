<div class="panel panel-default">
  <div class="panel-heading">
    <h1><strong>Log In</strong></h1>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form_group">
        <%= f.email_field :email, :placeholder => 'Email Address', autofocus: true, class: "form-control" %><br />
      </div>

      <div class="form_group">
        <%= f.password_field :password, :placeholder => 'Password', autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "base-text" %>
        </div>
      <% end -%>

      <div class="form_group">
        <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
      </div><br />
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "base-text" %><br />
    <% end -%>
  </div>
  <div class="panel-footer">
    <p>Don't have an account?</p>
    <%= render "devise/shared/links" %>
  </div>
</div>